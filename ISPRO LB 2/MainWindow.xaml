<Window x:Class="ISPRO_LB_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISPRO_LB_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="303*"/>
                <ColumnDefinition Width="97*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.ColumnSpan="2">
                <Button Width="300" Height="30" x:Name="BnImport"
Click="BnImport_Click" >Импорт данных</Button>
                <Button Width="300" Height="30" x:Name="BnExport"
Click="BnExport_Click" >Экспорт данных</Button>
                <Button Width="300" Height="30" x:Name="BnImportОJson"
Click="BnImportJSON_Click" >Импорт данных из JSON</Button>
                <Button Width="300" Height="30" x:Name="BnExportWord"
Click="BnExportWord_Click" >Экспорт данных в Word</Button>

            </StackPanel>
        </Grid>
        <DataGrid Grid.Row="0" x:Name="Data1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Order Code" Binding="{Binding CodeOrder}" Width="100"/>
                <DataGridTextColumn Header="Creation Date" Binding="{Binding CreaateDate}" Width="100"/>
                <DataGridTextColumn Header="Order Time" Binding="{Binding CreateTime}" Width="100"/>
                <DataGridTextColumn Header="Client Code" Binding="{Binding CodeClient}" Width="100"/>
                <DataGridTextColumn Header="Services" Binding="{Binding Services}" Width="150"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Closing Date" Binding="{Binding ClosedDate}" Width="100"/>
                <DataGridTextColumn Header="Rental Time" Binding="{Binding ProkatTime}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
